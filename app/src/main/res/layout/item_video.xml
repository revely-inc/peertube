<?xml version="1.0" encoding="utf-8"?>
<layout>
	<data>
		<variable
				name="video"
				type="co.revely.peertube.api.peertube.response.Video"/>
	</data>
<com.google.android.material.card.MaterialCardView
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:cardPreventCornerOverlap="true"
		>

	<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			>

		<ImageView
				android:id="@+id/thumbnails"
				android:layout_width="0dp"
				android:layout_height="0dp"
				android:contentDescription="@string/videos"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintDimensionRatio="560:316"
				/>

		<TextView
				android:id="@+id/duration"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="8dp"
				android:paddingStart="2dp"
				android:paddingEnd="2dp"
				android:background="@color/colorPrimaryDarkTransparent"
				android:textSize="@dimen/text_size_small"
				android:textColor="@android:color/white"
				tools:text="1:23:45"
				app:duration="@{video.duration}"
				app:layout_constraintBottom_toBottomOf="@+id/thumbnails"
				app:layout_constraintEnd_toEndOf="@id/thumbnails"
				/>

		<ImageView
				android:id="@+id/account_avatar"
				android:layout_width="32dp"
				android:layout_height="32dp"
				android:layout_marginTop="16dp"
				android:layout_marginBottom="32dp"
				android:layout_marginStart="16dp"
				android:layout_marginEnd="16dp"
				app:layout_constraintTop_toBottomOf="@+id/thumbnails"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				/>

		<TextView
				android:id="@+id/name"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginTop="8dp"
				android:layout_marginStart="16dp"
				android:layout_marginEnd="16dp"
				android:text="@{video.name}"
				android:textColor="@color/text_high_emphasis"
				tools:text="Name"
				android:textSize="@dimen/text_size_medium"
				android:maxLines="2"
				android:ellipsize="end"
				app:layout_constraintTop_toBottomOf="@+id/thumbnails"
				app:layout_constraintBottom_toTopOf="@+id/info"
				app:layout_constraintStart_toEndOf="@+id/account_avatar"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintVertical_chainStyle="packed"
				app:layout_constraintVertical_bias="0.25"
				/>

		<TextView
				android:id="@+id/info"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginBottom="16dp"
				android:layout_marginStart="16dp"
				android:layout_marginEnd="16dp"
				android:textSize="@dimen/text_size_small"
				android:lines="1"
				android:maxLines="1"
				android:ellipsize="end"
				tools:text="John Doe • 2,5 M views • 3 weeks ago"
				app:layout_constraintTop_toBottomOf="@+id/name"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintStart_toEndOf="@+id/account_avatar"
				app:layout_constraintEnd_toEndOf="parent"
				/>
	</androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
</layout>